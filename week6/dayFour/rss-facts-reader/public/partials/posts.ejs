<div class="container">
    <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div class="post">
                <h3><a href="<%= post.link %>" target="_blank"><%= post.title %></a></h3>
                <div class="post-meta">
                    Published: <%= new Date(post.pubDate).toLocaleDateString() %> | 
                    Author: <%= post.creator || 'Unknown' %>
                </div>
                <div class="categories">
                    Categories: <%= post.categories ? post.categories.join(', ') : 'Uncategorized' %>
                </div>
                <p><%= post.contentSnippet || post.content %></p>
            </div>
        <% }); %>
    <% } else { %>
        <p>No posts found.</p>
    <% } %>
</div>